@font-face {
	font-family: "page";
	src: url(fonts/deja_serif_bold.ttf);
}

@font-face {
	font-family: "paragraph";
	src: url(fonts/lib_serif.ttf);
}

@font-face {
    font-family: "button";
    src: url(fonts/racha_bold.ttf);
}

ul {
	list-style-type: none;
	margin: auto;
	padding: 0;
	width: 550px;
	overflow: hidden;
	background-color: #222;
	position: -webkit-sticky; /* Safari */
	position: sticky;
	top: 0;
}

li {
	float: left;
}

li a {
	font-family: paragraph;
 	display: block;
 	color: white;
 	text-align: center;
	padding: 14px 16px;
	text-decoration: none;
}

li a:hover {
  background-color: #080808;
}

.active {
  background-color: #AF4C50;
}

body {
	margin: 0;
	background: #FFFAFA;
}

h1 {
	font-size: 230%;
	text-align: center;
	line-height: 2;
	font-family: page;
	color: white;
	border: ;
	border-radius: 10px 10px 0 0;
	background: #333333;
	padding: 10px 0 0 0;
	width: 550px;
	margin: 10px auto auto auto;
}

h2 {
	font-size: 175%;
	font-family: paragraph;
	margin: 20px auto 20px auto;
	text-align: left;
	line-height: 1;
	width: 550px;
}

p {
	font-family: paragraph;
	margin: 20px auto 20px auto;
	text-align: justify;
	line-height: 2;
	width: 550px;
}

img {
	display: block;
	border-radius: 10px 10px 0 0;
	margin: 0 auto 0 auto;
	width: 550px;
}

figcaption {
	display: block;
	color: white;
	background: #222;
	border-radius: 0 0 10px 10px;
	font-size: 85%;
	text-align: center;
	width: 550px;
	line-height: 1.5;
	margin: 0 auto 20px auto;
	padding: 10px 0 10px 0;
}

code {
	display: block;
	width: 543px;
	line-height: 0.5;
	border-style: none none none solid;
	border-width: 7px;
	border-color: #AF4C50;
	text-indent: 20px;
	margin: 0 auto 0 auto;
	padding: 10px 0 10px 0;
	background: #ffdedb;	
}

hr.solid {
	border-top: 10px solid #AF4C50;
	width: 550px;
}

hr2.solid {
	border-top: 1px solid #AF4C50;
	width: 400px;
}

/* Buttons */
.button {
    display: block;
    overflow: hidden;
    padding: 7px 50px 0px 50px;
    border-radius: 5px;
    text-align: center;
    font-family: "button";
    font-size: 110%;
    margin: 10px auto 10px auto;
    cursor: pointer;
}

.button_fill {
    border: none;
    background-color: #222;
    color: white;
}

.button_fill:hover {
    background-color: #AF4C50;
}

.button_outline {
    border: none;
    background-color: #AF4C50;
    color: #FFFAFA;
}

.button_outline:hover {
    background-color: #222;
    color: #FFFAFA;
}
/* End of Buttons */

footer {
	display: block;
	margin: 0 auto 0 auto;
	padding: 5px 0 5px 0;
	color: white;
	text-align: center;
	line-height: 1.5;
	background: #222;
	width: 550px;
}

p.footer {
	text-align: center;
}
@media only screen and (max-width: 600px) {
	p, img, figcaption, code {
		width: 90vw;
	}

	hr.solid {
		width: 100vw;
	}

	hr2.solid {
		width
	}

	h1 {
		margin-top: -8px;
		border-radius: 0;
		width: 100vw;
		font-size: 200%;	
	}

	ul, footer {
		width: 100vw;
	}
}
